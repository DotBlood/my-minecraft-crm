{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"],
      "@app/*": ["./src/app/*"],
      "@app": ["./src/app"],
      "@pages/*": ["./src/pages/*"],
      "@pages": ["./src/pages"],
      "@shared/*": ["./src/shared/*"],
      "@shared": ["./src/shared"],
      "@widgets/*": ["./src/widgets/*"],
      "@widgets": ["./src/widgets"],
      "@entities/*": ["./src/entities/*"],
      "@entities": ["./src/entities"]
    }
  }
}
